<h1>Edit Skill</h1>

<% if @skill.errors.any? %>
  <h3>Please fix the following errors:</h3>
  <ul>
    <% @skill.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @skill do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :number %>
  <%= f.text_field :number %>
  <%= f.submit %>
<% end %>
