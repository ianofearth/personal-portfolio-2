<h1><%= @post.title %></h1>
<h3><%= @post.body %></h3>

<% if current_user != nil && current_user.admin %>
  <%= link_to "Edit Post", edit_user_post_path(@user, @post) %>
  <%= link_to "Delete Post", user_post_path(@user, @post), data: {method: 'delete', confirm:'are you sure?'} %>
<% end %>

<%= link_to "Add Comment", new_post_comment_path(@post) %>

<br />

<% @post.comments.each do |comment| %>
    <h4><%= comment.title %></h4>
    <h5><%= comment.body %></h5>
<% end %>
